<div>
<h1><%= @question.test.title %> <% t('question.question') %></h1>

<p>
  <strong><% t('question.question') %></strong>
  <%= @question.body %>
</p>

<h2><% t('answer.answers') %></h2>

<%= link_to t('question.new_answer'), new_admin_question_answer_path(@question) %>
<ol>
  <%= render @question.answers %>
</ol>


<%= link_to t('app.edit'), edit_admin_question_path(@question) %> |
<%= link_to t('app.delete'),
                admin_question_path(@question),
                method: :delete,
                data: { confirm: t('app.sure') }%> |
<%= link_to t('app.back'), admin_test_path(@question.test) %>
</div>
