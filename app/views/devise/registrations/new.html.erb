<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
     <%= f.text_field :first_name, autofocus: true, placeholder: t(".first_name") %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, placeholder: t('.last_name') %>
  </div>

  <div class="field">
    <%= f.email_field :email, placeholder: t('.email') %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: t(".new_password", minimum_password_length: @minimum_password_length) %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: t('.password_confirm') %>
  </div>

  <div class="actions">
    <%= f.submit t(".sign_up") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
